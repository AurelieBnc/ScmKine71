{# Utilisation du modèle de page "base.html.twig" #}
{% extends 'base.html.twig' %}

{# Titre de la page #}
{% block title %}Résultat de recherche - {{ site_name }}{% endblock %}

{# contenu de la page #}
{% block body %}

    <div class="container-fluid">

        {# Titre h1 #}
        <div class="row">
            <h1 class="col-12 text-center my-5">Résultat de la recherche "{{ app.request.query.get('q') }}"</h1>
        </div>

        <div class="row">

            <div class="col-12 col-md-8 offset-md-2">

                {# Affichage du nombre total d'articles #}
                <div class="row">
                    <p class="col-12 text-center">Nombre total de résultat : {{ articles.getTotalItemCount }}</p>
                </div>

                {# S'il y a des articles, on affiche le menu de navigation #}
                {% if articles is not empty %}

                    <div class="row">
                        <div class="col-12 my-3 text-center">
                            <div class="d-inline-block">
                                {{ knp_pagination_render(articles) }}
                            </div>
                        </div>
                    </div>

                {% endif %}

                {# Liste des articles #}
                <div class="row">


                    {% for article in articles %}

                        <div class="col-12">

                            <div class="card my-3 bg-black article-card">

                                {# Titre de l'article #}
                                <div class="card-header">
                                    <a href="{{ path ('blog') }}#{{ article.slug }}"><i class="far fa-newspaper me-2"></i>{{ article.title }}</a>
                                </div>

                                {# Contenu de l'article #}
                                <div class="card-body">

                                    <div class="blockquote mb-0">
                                        <p class="mb-4">{{ article.content|striptags|slice(0,150) }}... <a href="{{ path ('blog') }}#{{ article.slug }}">Lire la suite</a></p>

                                        {# Affichage de l'auteur et de la date de publication #}
                                        <footer class="blockquote-footer">Publié le <strong>{{ article.publicationDate|date('d/m/Y à H\\hi') }}</strong> </footer>
                                    </div>
                                    {# Si l'utilisateur a le rôle admin, on affiche un menu avec des boutons permettant de modifier/supprimer l'article #}
                                    {% if is_granted('ROLE_ADMIN') %}
                                        <p class="mb-0 mt-3">
                                            <a class="text-warning me-3" href="{{ path('blog_publication_edit', { id : article.id }) }}"><i class="fas fa-edit me-1"></i>Modifier</a>

                                            {#
                                            Bouton de suppression composé de :
                                            - onclick="" pour demander une confirmation de suppression grâce à la fonction confirm() de Javascript
                                            - un token csrf en donnée d'url pour empêcher les attaques CSRF
                                            #}
                                            <a onclick="return confirm('Êtes-vous sûr de vouloir supprimer cette publication ?')" class="text-danger" href="{{ path('blog_publication_delete', { id : article.id, csrf_token : csrf_token('blog_publication_delete_' ~ article.id ) }) }}"><i class="fas fa-trash me-1"></i>Supprimer</a>

                                        </p>
                                    {% endif %}

                                </div>

                            </div>

                        </div>

                    {% else %}

                        <p class="col-12 text-center alert alert-warning">Aucun résultat pour cette recherche.</p>

                    {% endfor %}


                </div>

                {# S'il y a des articles, on affiche le menu de navigation #}
                {% if articles is not empty %}

                    <div class="row">
                        <div class="col-12 my-3 text-center">
                            <div class="d-inline-block">
                                {{ knp_pagination_render(articles) }}
                            </div>
                        </div>
                    </div>

                {% endif %}

            </div>

        </div>

    </div>

{% endblock %}