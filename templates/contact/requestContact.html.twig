{% extends 'base.html.twig' %}

{% block title %}Confirmation d'envoi de message - {{ site_name }}{% endblock %}

{% block body %}

    <div class="container">
        <div class="row">
            <h1  class="text-center name-office my-5">Récapitulatif de votre message</h1>

            <small class="text-muted text-center">Envoyé par : {{ contact_email }}</small>
            <h3 class="text-center fw-bold mt-4">Sujet : {{ contact_subject }}</h3>
            <p class="text-center"></p>
            <p class="text-center">{{ content }}</p>
        </div>
    </div>

{% endblock %}